@model JobBoard.Models.Applicant.ApplicantDetailViewModel

@{
    ViewData["Title"] = "Applicant Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold"></label>
                        <p class="form-control-plaintext">@Model.FullName</p>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <p class="form-control-plaintext">@Model.Email</p>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                        <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label fw-bold"></label>
                        <p class="form-control-plaintext">@Model.Gender</p>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="EditApplicantDetail" asp-controller="Applicant" class="btn btn-primary me-2">Edit Details</a>
                    <a asp-action="DeleteApplicantDetail" asp-controller="Applicant" class="btn btn-danger">Delete Details</a>
                </div>
            </div>
        </div>
    </div>
</div>
