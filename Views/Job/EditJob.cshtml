@model EditJobViewModel

<h2>Edit Job</h2>

<form asp-action="EditJob" method="post">
    <input type="hidden" asp-for="JobId" />
    <div class="form-group">
        <label asp-for="JobName"></label>
        <input asp-for="JobName" class="form-control" />
        <span asp-validation-for="JobName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobDescription"></label>
        <textarea asp-for="JobDescription" class="form-control"></textarea>
        <span asp-validation-for="JobDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PictureUrl"></label>
        <input asp-for="PictureUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
