@model Job

<h2>Delete Job</h2>

<p>Are you sure you want to delete the job <strong>@Model.JobName</strong>?</p>

<form asp-action="DeleteJobConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ViewJobs" class="btn btn-secondary">Cancel</a>
</form>
