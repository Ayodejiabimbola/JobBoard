@model List<Job>

@{
    ViewData["Title"] = "Jobs List";
}

<h1>Jobs List</h1>
<p><a asp-action="CreateJob" asp-controller="Job" class="btn btn-info me-2">Add New Job</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Job Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.JobName</td>
                <td>
                    <td class="d-flex">
                    <a asp-action="JobDetails" asp-controller="Job" asp-route-id="@job.Id" class="btn btn-info me-2">View</a>
                    <a asp-action="EditJob" asp-controller="Job" asp-route-id="@job.Id" class="btn btn-warning me-2">Edit</a>
                    <form asp-action="DeleteJob" asp-controller="Job" asp-route-id="@job.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this job?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
