@{
    ViewData["Title"] = "Landing Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        /* Custom styles */
        .hero {
            background-image: url('/images/landing_page.jpg');
            height: 50vh;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }
        
        .card {
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>

    <div class="container-fluid p-0">
        <!-- Hero Section -->
        <section class="hero">
            <h1>Welcome to Our Job Board</h1>
            <p>Your future starts here. Find your dream job today!</p>
            <a href="/Auth/Register" class="btn btn-light btn-lg">Get Started</a>
        </section>

        <!-- Features Section -->
        <div class="container mt-5">
            <h2 class="text-center">Our Features</h2>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <i class="fas fa-briefcase fa-3x text-primary"></i>
                            <h5 class="card-title">Find Jobs</h5>
                            <p class="card-text">Search for your perfect job in our extensive database.</p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <i class="fas fa-users fa-3x text-primary"></i>
                            <h5 class="card-title">Join Our Community</h5>
                            <p class="card-text">Connect with professionals and expand your network.</p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <i class="fas fa-chart-line fa-3x text-primary"></i>
                            <h5 class="card-title">Career Growth</h5>
                            <p class="card-text">Access resources to help you grow in your career.</p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Testimonials Section -->
        <section class="mt-5">
            <h2 class="text-center">What Our Users Say</h2>
            <div class="container">
                <div class="row mt-4">
                    <div class="col-md-6">
                        <blockquote class="blockquote text-center">
                            <p class="mb-0">"This platform helped me find my dream job!"</p>
                            <footer class="blockquote-footer">Adesare</footer>
                        </blockquote>
                    </div>
                    <div class="col-md-6">
                        <blockquote class="blockquote text-center">
                            <p class="mb-0">"The process was easy and intuitive."</p>
                            <footer class="blockquote-footer">Adegbagi</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer Section -->
        <footer class="bg-dark text-white text-center p-4 mt-5">
            <p>&copy; 2024 Your Company. All rights reserved.</p>
            <p><a href="#" class="text-white">Contact Us</a></p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
